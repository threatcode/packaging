#!/bin/sh

set -e

source=$( basename $PWD )
updated=false


if ! test -e debian/kali-ci.yml; then
    cat >debian/kali-ci.yml <<EOF
include:
  - https://gitlab.com/kalilinux/tools/kali-ci-pipeline/raw/master/recipes/kali.yml
EOF
    updated=true
    git add debian/kali-ci.yml
    git commit -q -m "Add GitLab's CI configuration file"
    git push -q
fi
